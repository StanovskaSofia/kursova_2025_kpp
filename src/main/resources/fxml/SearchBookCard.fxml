<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import java.net.URL?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>

<Pane id="main"
      xmlns="http://javafx.com/javafx/15.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.readile.readile.controllers.book.SearchBookCardController"
      onMouseClicked="#openPreview"
      prefHeight="250.0" prefWidth="215.0">

    <stylesheets>
        <URL value="@../styles/global.css" />
        <URL value="@../styles/search-book-card.css" />
    </stylesheets>

    <children>

        <!-- ОБКЛАДИНКА -->
        <!-- ВАЖЛИВО: id="coverPane" щоб root.lookup("#coverPane") працював -->
        <Pane fx:id="coverPane"
              id="coverPane"
              layoutX="10.0"
              layoutY="8.0"
              prefHeight="90.0"
              prefWidth="196.0"
              style="-fx-background-radius: 12; -fx-background-color: #3a3a3a;" />

        <Label id="book-name" fx:id="bookName"
               layoutX="10.0" layoutY="105.0"
               prefHeight="40.0" prefWidth="196.0"
               text="Book Name" wrapText="true" />

        <Label id="author" fx:id="authorName"
               layoutX="10.0" layoutY="145.0"
               prefHeight="30.0" prefWidth="196.0"
               text="Author Name" wrapText="true" />

        <Label id="description" fx:id="description"
               layoutX="10.0" layoutY="175.0"
               prefHeight="40.0" prefWidth="196.0"
               text="Description" wrapText="true" />

        <Pane id="bottom-pane"
              layoutY="215.0"
              prefHeight="35.0"
              prefWidth="215.0">
        <children>
                <!-- Add НЕ має відкривати preview -->
                <JFXButton id="add"
                           layoutX="51.0"
                           layoutY="2.0"
                           onMouseClicked="#consumeClick"
                           onAction="#addBook"
                           prefHeight="30.0"
                           prefWidth="114.0"
                           text="Add">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </JFXButton>
            </children>
        </Pane>

    </children>

    <cursor>
        <Cursor fx:constant="HAND" />
    </cursor>
</Pane>
